<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/pocket_onboarding_background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left_quarter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right_quarter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75" />

    <!-- text set programmatically -->
    <TextView
        android:id="@+id/manual_upgrade_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@string/font_ember_light"
        android:textColor="@color/photonGrey10_a80p"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/manual_upgrade_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- text set programmatically -->
    <TextView
        android:id="@+id/manual_upgrade_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@string/font_ember_regular"
        android:lineSpacingExtra="2sp"
        android:textAlignment="center"
        android:textColor="@color/photonGrey10_a80p"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/manual_upgrade_button_positive"
        app:layout_constraintEnd_toEndOf="@id/guideline_right_quarter"
        app:layout_constraintStart_toStartOf="@id/guideline_left_quarter"
        app:layout_constraintTop_toBottomOf="@+id/manual_upgrade_title" />

    <Button
        android:id="@+id/manual_upgrade_button_positive"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/turbo_button_enable"
        android:fontFamily="@string/font_ember_regular"
        android:minWidth="108dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:minHeight="@dimen/onboarding_button_height"
        android:text="@string/manual_upgrade_yes_button"
        android:textAllCaps="false"
        android:textColor="@color/photonGrey10"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/manual_upgrade_button_negative"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/manual_upgrade_description">

        <requestFocus />
    </Button>

    <Button
        android:id="@+id/manual_upgrade_button_negative"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/turbo_button_disable"
        android:fontFamily="@string/font_ember_regular"
        android:minWidth="108dp"
        android:minHeight="@dimen/onboarding_button_height"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/manual_upgrade_no_button"
        android:textAllCaps="false"
        android:textColor="@color/photonGrey10"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/manual_upgrade_button_positive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/manual_upgrade_button_positive"
        app:layout_constraintTop_toTopOf="@id/manual_upgrade_button_positive" />

</androidx.constraintlayout.widget.ConstraintLayout>
